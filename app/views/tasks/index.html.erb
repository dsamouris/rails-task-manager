<h1>List of Tasks</h1>
<h2>You have created <%= @tasks.count %> tasks</h2>

<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %></li>
  <%= link_to "Delete", task_path(task), method: :delete, data: {confirm: "Are you sure?"} %>
  <% end %>
</ul>

<%= link_to 'Create New Task', new_task_path %>
